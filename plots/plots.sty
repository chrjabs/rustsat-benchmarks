% ===== PGF Plots Presets =====
\pgfplotsset{
  compat=newest,
  colormap name=viridis,
  colormap/viridis high res,
  myaxis/.style={
    title style={font=\small},
    label style={font=\small},
    tick label style={
      font=\small,
      /pgf/number format/1000 sep={},
    },
    legend style={
      font=\footnotesize,
      fill opacity=0.8,
      draw opacity=1,
      text opacity=1
    },
    tick pos=left,
    axis x line*=bottom,
    axis y line*=left,
    scale only axis,
  },
  mylineplot/.style={
    semithick,
  },
  every non boxed x axis/.append style={
    xtick align=inside,
    x axis line style={-},
  },
  every non boxed y axis/.append style={
    ytick align=inside,
    y axis line style={-},
  },
  rustsat/.style={
    mylineplot,
    color0,
    mark=square,
  },
  pysat/.style={
    mylineplot,
    color1,
    mark=x,
  },
  openwbo/.style={
    mylineplot,
    color2,
    mark=+,
  },
  cpp/.style={
    mylineplot,
    color2,
    mark=+,
  }
}

